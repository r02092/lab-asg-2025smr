{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build-gas": "vite build --mode gas",
    "dev": "vite",
    "prepare": "husky",
    "review": "tsx resources/ts/ci/reviewdog.ts"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "maplibre-gl": "^5.7.1",
    "maplibre-gl-gsi-terrain": "^2.2.2"
  },
  "devDependencies": {
    "@eslint/css": "^0.11.0",
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.2.0",
    "@prettier/plugin-php": "^0.24.0",
    "@types/google-apps-script": "^2.0.1",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-formatter-rdjson": "^1.0.6",
    "eslint-plugin-googleappsscript": "^1.0.5",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "laravel-vite-plugin": "^2.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.0.4"
  },
  "lint-staged": {
    "*": "npx prettier --ignore-unknown --write"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "overrides": [
      {
        "files": "*.php",
        "options": {
          "singleQuote": true
        }
      }
    ],
    "plugins": [
      "@prettier/plugin-php"
    ]
  }
}
